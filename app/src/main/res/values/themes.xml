<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PiAF" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="materialButtonStyle">@style/PafButton</item>
        <item name="preferenceScreenStyle">@style/PafPreferences</item>
        <item name="android:statusBarColor">@color/paf_secondary</item>
        <item name="android:textColorPrimary">@color/paf_white</item>
        <item name="android:textColorSecondary">@color/paf_white</item>
    </style>

    <style name="PafDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/paf_secondary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:titleTextColor">@color/black</item>
    </style>

    <style name="PafButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/paf_secondary</item>
        <item name="cornerRadius">40dp</item>
        <item name="rippleColor">@color/paf_ripple</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="PafBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="background">@color/paf_secondary</item>
        <item name="color">@color/paf_green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>


    <style name="PafPopup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:backgroundTint">@color/paf_secondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>

    <style name="Theme.PiAF" parent="Base.Theme.PiAF" />

<!--    <style name="ThemeOverlay.PiAF.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>-->

</resources>